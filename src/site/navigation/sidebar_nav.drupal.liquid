<nav id="va-detailpage-sidebar" class="usa-width-one-fourth va-sidebarnav">
    <div>
        <button class="va-btn-close-icon va-sidebarnav-close" type="button" aria-label="Close this menu"></button>
    </div>
    {% for link in sidebar.links %}
        {% if forloop.first == true %}
            <div class="left-side-nav-title">
                <i class="icon-small white hub-icon-{{ link.label }} hub-background-{{ link.label }}"></i>
                <h4>{{ link.label }}</h4>
            </div>
            <ul class="usa-accordion">
                {% for link in link.links %}
                    <div class="usa-accordion-content" aria-hidden="false">
                        <ul class="usa-sidenav-list">
                            <li>
                                <button class="usa-accordion-button">{{ link.label }}</button>
                                <div class="usa-accordion-content" aria-hidden="false">
                                    <ul class="usa-sidenav-list">
                                        {% for link in link.links %}
                                            <li>
                                                <a href="{{ link.url.path }}" class="">{{ link.label }}</a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                {% endfor %}
            </ul>
        {% endif %}

    {% endfor %}
</nav>
