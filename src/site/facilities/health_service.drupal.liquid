<div class="usa-accordion">
    <ul class="usa-unstyled-list">
        {% assign serviceTaxonomy = healthService.fieldServiceNameAndDescripti.entity %}
        <li>
            <button
                    class="usa-accordion-button usa-button-unstyled"
                    aria-expanded="false"
                    aria-controls="{{ serviceTaxonomy.entityBundle }}-{{ serviceTaxonomy.entityId }}"
            >
                {{ serviceTaxonomy.name }}
            </button>
            <div id="{{ serviceTaxonomy.entityBundle }}-{{ serviceTaxonomy.entityId }}" class="usa-accordion-content" aria-hidden="true">
                <div>{{ serviceTaxonomy.fieldAlsoKnownAs }}</div>

                {% comment %}
                    Show the region specific health service description if available. If not, fall back to national.
                {% endcomment %}
                {% if healthService.fieldBody.processed %}
                    <div>{{ healthService.fieldBody.processed }}</div>
                {% else %}
                    <div>{{ serviceTaxonomy.description.processed }}</div>
                {% endif %}

                <p class="vads-u-font-weight--bold">Available at</p>
                <ul class="usa-unstyled-list">
                    {% for location in healthService.fieldServiceLocation.entities %}
                        <li class="vads-u-margin-bottom--2"><a href="/drupal{{ entityUrl.path }}/{{ location | locationUrlConvention }}">{{ location.fieldNicknameForThisFacility }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </li>
    </ul>
</div>